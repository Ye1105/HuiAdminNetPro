<script type="text/javascript">
    layui.config({
        base: '../layuiadmin/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块
    }).use(function () {

        let table = layui.table,
            form = layui.form,
            layer = layui.layer;

        //表单渲染
        table.render({
            elem: '#ID-table-role'
            , url: '/api/routes/paged' // API接口
            , request: {
                pageName: 'pageIndex',  //替换分页的字段名称，后端可识别
                limitName: 'pageSize'
            }
            //除分页固定参数之后，其他的拼接参数
            , where: {
                offset: 0,                //数据偏移量
                orderby: "rId desc"   //默认排序
            }
            , page: { // 支持传入 laypage 组件的所有参数（某些参数除外，如：jump/elem） - 详见文档
                layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip'] //自定义分页布局
                , prev: "上一页"
                , next: "下一页"
                //,curr: 5 //设定初始在第 5 页
                //,groups: 1 //只显示 1 个连续页码
                , limit: 10   //页面数量限制
            }
            , skin: 'default' // 表格风格
            , even: true   //开启偶数行背景色
            , css: [ // 直接给当前表格主容器重置 css 样式
                '.layui-table-page{text-align: center;}' // 让分页栏居中
            ].join('')
            , toolbar: '#ID-table-role-toolbar'
            , pagebar: '#ID-table-role-pagebar' // 分页栏模板
            //, totalRow: true // 开启合计行
            , cols: [[                          // 列名
                { type: 'checkbox', fixed: 'left' }
                , { field: 'id', title: '当前节点' }
                , { field: 'pId', title: '父节点' }
                , { field: 'route', title: '路由' }
                , { field: 'name', title: '名称' }
                , { field: 'order', title: '排序' }
                , { field: 'status', title: '状态' }
                , {
                    fixed: 'right', minWidth: 142, title: '操作', toolbar: "#cell-operation"
                }
            ]]
            , response: {
                statusCode: 200 // 重新规定成功的状态码为 200，table 组件默认为 0
            }
            , parseData: function (res) {  //转换后端返回的数据格式
                return {
                    "code": res.status,
                    "msg": res.uimsg,
                    "count": res.data.totalCount,
                    "data": res.data.list
                };
            }
        })

        //工具栏事件
        table.on('toolbar(ID-table-role)', function (obj) {
            var id = obj.config.id;
            var checkStatus = table.checkStatus(id);
            switch (obj.event) {
                case 'add':
                    layer.open({
                        title: "添加角色",
                        type: 2,
                        area: ['480px', '375px'],
                        content: '/routes/create',
                        btn: ["提交", '取消'],
                        yes: function (index, layero) {
                            var iframeWindow = window['layui-layer-iframe' + index]
                                //, submitID = 'LAY-account-create'
                                , submitFilter = 'form-route-filter'

                            //1.获取表单数据
                            let formData = iframeWindow.layui.form.val(submitFilter)
                            console.log(formData)
                            //2.json schema 校验表单数据
                            if (formData != {}) {
                                 return
                                //let schemas = jsonSchemas.getSchema("route-create")
                                //if (schemas.res == false) {
                                //    layer.msg(schemas.msg)
                                //    return;
                                //}

                                //let validator = new ZSchema();
                                //validator.validate(formData, schemas.data, function (err, valid) {
                                //    if (!valid) {
                                //        layer.msg(`${err[err.length - 1].title}：${err[err.length - 1].message}`)
                                //        return
                                //    }

                                //    var form = new FormData();
                                //    form.append('name', formData["name"]);

                                //    //3.提交表单数据
                                //    createRole(form, index);
                                //});
                            }
                        }
                    })
                    break;
            }
        })

        //【编辑账号】触发单元格工具事件
        table.on('tool(ID-table-role)', function (obj) {
            var data = obj.data; // 获取当前表格属性配置项
            let params = Qs.stringify(data);
            switch (obj.event) {
                case 'edit':
                    layer.open({
                        title: "编辑账号",
                        type: 2,
                        area: ['480px', '268px'],
                        content: `/routes/edit?${params}`,
                        btn: ["提交", '取消'],
                        yes: function (index, layero) {
                            var iframeWindow = window['layui-layer-iframe' + index]
                                //, submitID = 'LAY-account-create'
                                , submitFilter = 'LAY-role-edit-submit'
                            //1.获取表单数据
                            let formData = iframeWindow.layui.form.val(submitFilter)
                            //2.json schema 校验表单数据
                            if (formData != {}) {

                                let schemas = jsonSchemas.getSchema("role-edit")
                                if (schemas.res == false) {
                                    layer.msg(schemas.msg)
                                }
                                let validator = new ZSchema();
                                validator.validate(formData, schemas.data, function (err, valid) {
                                    if (!valid) {
                                        layer.msg(`${err[err.length - 1].title}：${err[err.length - 1].message}`)
                                        return
                                    }
                                    //3.提交表单数据
                                    console.log(formData)
                                    editRole(formData, index);
                                });
                            }
                        }
                    })
                    break;
                case 'route':

                    layer.open({
                        title: "编辑权限树",
                        type: 2,
                        area: ['100%', '100%'],
                        content: `/routes?${params}`,
                        btn: ["提交", '取消'],
                        yes: function (index, layero) {
                            var iframeWindow = window['layui-layer-iframe' + index]
                                //, submitID = 'LAY-account-create'
                                , submitFilter = 'LAY-route-edit-submit'
                            //1.获取表单数据
                            let formData = iframeWindow.layui.form.val(submitFilter)

                        }
                    })
                    break;
            }
        })


        /**
        * bref fetch 修改角色
        * param data json格式的表单参数
        * param iframeIndex 弹窗的 index
        */
        async function editRole(data, iframeIndex) {
            let loadIndex = layer.load(0);
            await fetch(`/api/routes`,
                {
                    method: 'put',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                .then(response => response.json())
                .then(result => {
                    layer.close(loadIndex);
                    if (result.status == 200) {
                        table.reload('ID-table-role');
                        layer.close(iframeIndex); //关闭弹层
                        layer.msg("编辑角色成功");
                    } else {
                        layer.msg(result.uimsg);
                    }
                })
                .catch(function (ex) {
                    layer.close(loadIndex);
                    console.log('parsing failed', ex);
                })
        }


        /**
        * bref fetch 创建角色
        * param data
        * param iframeIndex 弹窗的 index
        */
        async function createRole(data, iframeIndex) {
            let loadIndex = layer.load(0);
            await fetch(`/api/routes`,
                {
                    method: 'post',
                    //headers: {
                    //    'Content-Type': 'application/json'
                    //},
                    body: data
                })
                .then(response => response.json())
                .then(result => {
                    layer.close(loadIndex);
                    if (result.status == 200) {
                        table.reload('ID-table-role');
                        layer.close(iframeIndex); //关闭弹层
                        layer.msg("角色添加成功");
                    } else {
                        layer.msg(result.uimsg);
                    }
                })
                .catch(function (ex) {
                    layer.close(loadIndex);
                    console.log('parsing failed', ex);
                })
        }


        //外部搜索
        form.on('submit(table-search)', function (data) {
            var field = data.field;
            //console.log('search',field)
            // 执行搜索重载
            table.reload('ID-table-role', {
                page: {
                    curr: 1 // 重新从第 1 页开始
                }
                , where: field // 搜索的字段
            });
            return false; // 阻止默认 form 跳转
        })

    })
</script>